#include <stdio.h>
int main(){ 
  int valor1 = 10;  \\Variável tipo int
  char nome[] = "João"; \\Variável string
  char letra = 'C'; \\Variável char
  float preco = 20.50; \\Variável float
  printf("==========================\n");
  printf("O valor 1 é igual a: %d\n", valor1);
  printf("O nome dele é: %s\n", nome);
  printf("A letra é %c\n", letra);
  printf("O preço é: R$ %f\n", preco);
  printf("==========================\n");
  return 0;

}
